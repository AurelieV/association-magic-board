div
  .header(flex layout="row" layout-align="start center")
    .title(flex) {{ title }}
    md-button.md-icon-button(ng-click="edit($event)" aria-label="Editer" ng-if="!isEditing")
      ng-md-icon(icon="edit", style="fill: white")
    md-button.md-button(ng-click="cancel($event)" aria-label="Annuler" ng-if="isEditing")
      | Annuler
    md-button.md-button(ng-click="save($event)" aria-label="Enregistrer" ng-if="isEditing")
      | Enregistrer
  .content
