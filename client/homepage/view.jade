  .members(ng-if="members.length > 0" flex="100" layout="column" layout-align="start center" layout-fill)
    .member(
      ng-repeat="member in members track by member.id| orderBy:['lastname', 'firstname']" 
      ng-click="select($event, member)"
      ng-class="{'selected':member.id == selectedMember.id, 'md-whiteframe-z1': member.id != selectedMember.id}"
      flex
    )
      md-toolbar(ng-show="selectedMember.id == member.id")
        .md-toolbar-tools
          md-button.md-icon-button(ng-click="select($event, null)" layout="column" layout-align="center center")
            ng-md-icon(icon="close", style="fill: white" flex)
          h2
            span {{ member.lastname | uppercase }} {{ member.firstname }}
          span(flex)
          md-button.md-icon-button(layout="column" layout-align="center center")
            ng-md-icon(icon="create", style="fill:white" flex)
      .name(ng-hide="selectedMember.id == member.id") {{ member.lastname | uppercase }} {{ member.firstname }} 
      .dci-number(ng-hide="selectedMember.id == member.id") {{ member.dci_number }}
      .information(ng-show="selectedMember.id == member.id" layout="row" layout-fill layout-align="start start" layout-margin)
        md-whiteframe.md-whiteframe-z1(flex)
         .dci-number {{ member.dci_number}}
