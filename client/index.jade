doctype html
html(lang="fr", xmlns:ng="http://angularjs.org", id="ng-app", ng-app="my-app")
  head
    meta(charset="utf-8")
    title My App
    link(href="css/app.css", rel="stylesheet")
    meta(name="viewport", content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

  body
    div(layout="column" flex)
      md-toolbar.md-default-theme
        .md-toolbar-tools
          .title.md-flex My App
      .hero-transition.page-transition(ui-view)

    script(src="js/vendor.js")
    script(src="js/app.templates.js")
    script(src="js/app.js")
    script(src="js/lb-services.js")
