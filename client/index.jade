doctype html
html(lang="fr", xmlns:ng="http://angularjs.org", id="ng-app", ng-app="association-magic-board")
  head
    meta(charset="utf-8")
    title My App
    link(href="css/app.css", rel="stylesheet")
    meta(name="viewport", content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

  body(layout="column")
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left")
      md-content
        ul(layout="column" layout-align="start center")
          li(flex)
            a(ui-sref="members") Membres
          li(flex)
            a(ui-sref="seasons") Saisons
    md-toolbar.mainbar
      .md-toolbar-tools
        md-button.md-icon-button(ng-click="$root.openMenu()" aria-label="menu")
          span.mdi.mdi-menu
        .title.md-flex My App
    md-content.content(layout="column")
      md-content.hero-transition.page-transition(ui-view layout="column")

    script(src="js/vendor.js")
    script(src="js/moment-fr.js")
    script(src="js/angular-material-components.js")
    script(src="js/app.templates.js")
    script(src="js/app.js")
    script(src="js/lb-services.js")
