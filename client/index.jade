doctype html
html(lang="fr", xmlns:ng="http://angularjs.org", id="ng-app", ng-app="my-app")
  head
    meta(charset="utf-8")
    title My App
    link(href="css/app.css", rel="stylesheet")
    meta(name="viewport", content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-status-bar-style", content="black")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")

  body(layout="column")
    md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="left")
      md-content
        ul
          a(ui-sref="members") 
            li Membres
          a(ui-sref="seasons")
            li Saisons
    md-toolbar.mainbar
      .md-toolbar-tools
        md-button.md-icon-button(ng-click="$root.openMenu()" aria-label="menu")
          ng-md-icon(icon="menu", style="fill: white")
        .title.md-flex My App 
    md-content.content(flex md-scroll-y layout="row" layout-align="center")
      .hero-transition.page-transition(ui-view flex flex-sm="100" flex-md="66" flex-gt-md="66")

    script(src="js/vendor.js")
    script(src="js/app.templates.js")
    script(src="js/app.js")
    script(src="js/lb-services.js")
